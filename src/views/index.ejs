<!DOCTYPE html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
    <script defer>
      const url = '/person/json';
      let jsonData;

      const getData = async (url) => {
        fetch(url, {
          body: JSON.stringify({ firstname: 'Joe', lastname: 'Doe' }),
          headers: { 'Content-Type': 'application/json' },
          method: 'POST'
        }).then(async response => {
          console.log('Request complete!', await response.json(), response);
        })
      }

      getData(url);
    </script>
  </head>

  <body class="flex flex-col items-center font-bold">
    <h1>Hello world!</h1>

    <form action="/person" class="flex flex-col gap-y-4" method="POST">
      <div>First name: <input id="firstname" name="firstname" /></div>
      <div>Last name: <input id="lastname" name="lastname" /></div>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
